apiVersion: apps/v1
kind: Deployment
metadata:
  name: sqlserver1node1
  namespace: sqlserver
  labels:
    app: sql11
spec:
  replicas: 1
  selector:
     matchLabels:
       app: sql11
  template:
    metadata:
      labels:
        app: sql11
    spec:
      terminationGracePeriodSeconds: 30
      hostname: sqlnode1
      securityContext:
        fsGroup: 10001
      containers:
      - name: mssql
        image: mcr.microsoft.com/mssql/server:2019-latest
        ports:
        - containerPort: 1433
        env:
        - name: MSSQL_PID
          value: "Developer"
        - name: ACCEPT_EULA
          value: "Y"
        - name: SA_PASSWORD
          valueFrom:
            secretKeyRef:
              name: sqlserver
              key: SA_PASSWORD
        volumeMounts:
        - name: mssqldata
          mountPath: /var/opt/mssql
      volumes:
      - name: mssqldata
        persistentVolumeClaim:
          claimName: sqlserver1node1
